       presentationVariant: [{ sortOrder: [{ by: 'UploadDate',
                                            direction: #DESC }],
       visualizations: [{ type: #AS_LINEITEM }] }] }

annotate view Z_C_ATTACHMENT_INCIDENTS_FJCM with
{
